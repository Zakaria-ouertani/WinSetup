# name: Enable asynchronous suggestions
# type: boolean
autosuggest.async = True

# name: Enable automatic suggestions
# type: boolean
autosuggest.enable = True

# name: Auto-update the Clink program files
# type: enum
# options: off,check,prompt,auto
clink.autoupdate = auto

# name: Colorize the input text
# type: boolean
clink.colorize_input = True

# name: Controls what startup logo to show
# type: enum
# options: none,full,short
clink.logo = none

# name: Strips CR and LF chars on paste
# type: enum
# options: delete,space,ampersand,crlf
clink.paste_crlf = space

# name: Days between update checks
# type: integer
clink.update_interval = 1

# name: Argument color
# type: color
color.arg = green

# name: Argument info color
# type: color
color.arginfo = yellow

# name: Shell command completions
# type: color
color.cmd = underline cyan

# name: Color for < and > redirection symbols
# type: color
color.cmdredir = bold

# name: Color for & and | command separators
# type: color
color.cmdsep = bold yellow

# name: Color for comment row
# type: color
color.comment_row = bright white on cyan

# name: Description completion color
# type: color
color.description = bright cyan

# name: Doskey completions
# type: color
color.doskey = sgr 38;5;226

# name: Color for executable command word
# type: color
color.executable = sgr 38;5;40

# name: Filtered completion color
# type: color
color.filtered = green

# name: Flag color
# type: color
color.flag = default

# name: Color for preferred branch completions
# type: color
color.git.star = bright green

# name: For user-interaction prompts
# type: color
color.interact = bold

# name: Message area color
# type: color
color.message = default

# name: Prompt color
# type: color
color.prompt = red

# name: Color for suggestion text
# type: color
color.suggestion = bright black

# name: Unexpected argument color
# type: color
color.unexpected = default

# name: Color for unrecognized command word
# type: color
color.unrecognized = sgr 38;5;203

# name: Height to use for the --height flag
# type: string
fzf.height = 70%

# name: Commands not automatically added to the history
# type: string
history.dont_add_to_history_cmds = exit

# name: Skip adding lines prefixed with whitespace
# type: boolean
history.ignore_space = False

# name: The number of history lines to save
# type: integer
history.max_lines = 10000

# name: Share history between instances
# type: boolean
history.shared = True

# name: Controls when past prompts are collapsed
# type: enum
# options: off,always,same_dir
prompt.transient = off

# name: Adjusts the cursor visibility and shape
# type: boolean
terminal.adjust_cursor_style = True

# name: Clink mouse input
# type: enum
# options: off,on,auto
terminal.mouse_input = on

# name: Support Windows' Ctrl-Alt substitute for AltGr
# type: boolean
terminal.use_altgr_substitute = True

